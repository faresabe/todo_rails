<h1>Log in</h1>
<%= form_with url: login_path do |f| %>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>

  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div>
    <%= submit_tag "Log in" %>
  </div>
  <div>
    <%= link_to "Don't have an account?", signup_path %>
  </div>
<% end %>