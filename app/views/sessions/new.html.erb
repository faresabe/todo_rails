<h1>Login</h1>

<%= form_with url: login_path do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email, required: true %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true %>
  </div>

  <%= form.submit "Login" %>
<% end %>

<%= link_to "Don't have an account? Sign up", signup_path %>